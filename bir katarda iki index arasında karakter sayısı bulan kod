#include <stdio.h>

int sayac(char dizi[],char arana_ );
int main()
{
    char dizi[50];
    char aranan;
   
    printf("metin giriniz\n");
    scanf("%s",dizi);
    
    printf("\naradiginiz karakteri giriniz\n");
    
    scanf("%c",&aranan);
    
   int sonuc=sayac(dizi,aranan);
   printf("%d",sonuc);

    return 0;
}




int sayac(char dizi[],char arana_ )
{
    int start_case=0;
    int start=0;
    int son=0;
    int sayac=0;
    int i=0;
    for(i=0;dizi[i]!='\0';i++)
    {
        if(dizi[i]==arana_)
        {
            if(start_case==0)
            {
                start_case=1;
                start=i;
            }
            son=i;
        }
        
    }
    for(int j=start+1;j<son;j++)
    {
        if(dizi[j]!=" ")
        {
            sayac++;
        }
    }
    return sayac;
}
